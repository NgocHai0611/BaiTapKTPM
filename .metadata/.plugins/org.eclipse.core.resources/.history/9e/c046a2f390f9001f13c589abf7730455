// Interface ChucVuState
package satePattern;

public interface ChucVuState {
    int tinhLuong();
}

// Lớp ThamNienState
class ThamNienState implements ChucVuState {
    @Override
    public int tinhLuong() {
        return 1000; // Lương cơ bản cho chức vụ Thâm niên
    }
}

// Lớp TienSiState
class TienSiState implements ChucVuState {
    @Override
    public int tinhLuong() {
        return 1100; // Lương cơ bản cho chức vụ Tiến sĩ
    }
}

// Lớp ToTruongState
class ToTruongState implements ChucVuState {
    @Override
    public int tinhLuong() {
        return 1200; // Lương cơ bản cho chức vụ Tổ trưởng
    }
}

// Lớp TruongKhoaState
class TruongKhoaState implements ChucVuState {
    @Override
    public int tinhLuong() {
        return 1300; // Lương cơ bản cho chức vụ Trưởng khoa
    }
}
